    <script>
        // 模拟学生数据
        const students = [
            {
                id: 1,
                name: "小明",
                age: 8,
                class: "三年级二班",
                recognition: 78,
                understanding: 65,
                regulation: 72,
                expression: 60,
                joinDate: "2023-01-15",
                progress: [30, 45, 55, 60, 65, 70, 78],
                stages: [90, 75, 60, 40],
                activities: [
                    { type: "game", title: "完成了情绪模仿游戏", time: "2小时前", score: 85 },
                    { type: "test", title: "完成了情绪识别测试", time: "1天前", score: 78 },
                    { type: "game", title: "参与了情境配对游戏", time: "2天前", score: 70 },
                    { type: "progress", title: "情绪调节能力提升", time: "3天前", score: 5 }
                ]
            },
            {
                id: 2,
                name: "小红",
                age: 9,
                class: "四年级一班",
                recognition: 85,
                understanding: 70,
                regulation: 65,
                expression: 75,
                joinDate: "2022-11-20",
                progress: [40, 50, 60, 65, 70, 75, 80, 85],
                stages: [95, 80, 70, 60],
                activities: [
                    { type: "game", title: "完成了表情拼图游戏", time: "3小时前", score: 90 },
                    { type: "test", title: "完成了情绪理解测试", time: "1天前", score: 82 },
                    { type: "game", title: "参与了情绪强度排序", time: "2天前", score: 75 },
                    { type: "progress", title: "情绪表达能力提升", time: "4天前", score: 8 }
                ]
            },
            {
                id: 3,
                name: "小华",
                age: 7,
                class: "二年级三班",
                recognition: 65,
                understanding: 55,
                regulation: 60,
                expression: 50,
                joinDate: "2023-03-10",
                progress: [20, 30, 40, 50, 55, 60, 65],
                stages: [70, 60, 45, 30],
                activities: [
                    { type: "game", title: "完成了情绪选择游戏", time: "5小时前", score: 70 },
                    { type: "test", title: "完成了基础情绪测试", time: "2天前", score: 65 },
                    { type: "game", title: "参与了情绪模仿游戏", time: "3天前", score: 60 },
                    { type: "progress", title: "情绪识别能力提升", time: "5天前", score: 10 }
                ]
            },
            {
                id: 4,
                name: "小丽",
                age: 8,
                class: "三年级一班",
                recognition: 80,
                understanding: 75,
                regulation: 70,
                expression: 65,
                joinDate: "2022-12-05",
                progress: [35, 45, 55, 60, 65, 70, 75, 80],
                stages: [85, 80, 65, 55],
                activities: [
                    { type: "game", title: "完成了共情理解游戏", time: "4小时前", score: 80 },
                    { type: "test", title: "完成了情绪调节测试", time: "1天前", score: 75 },
                    { type: "game", title: "参与了社会情境决策", time: "3天前", score: 70 },
                    { type: "progress", title: "情绪理解能力提升", time: "6天前", score: 7 }
                ]
            }
        ];

        // 当前选中的学生
        let currentStudent = students[0];

        // 初始化学生列表
        function initStudentList() {
            const studentList = document.getElementById('studentList');
            studentList.innerHTML = '';
            
            students.forEach(student => {
                const studentItem = document.createElement('div');
                studentItem.className = `student-item ${student.id === currentStudent.id ? 'active' : ''}`;
                studentItem.innerHTML = `
                    <div class="student-name">${student.name}</div>
                    <div class="student-info">${student.age}岁 | ${student.class}</div>
                    <div class="student-info">加入时间: ${student.joinDate}</div>
                `;
                
                studentItem.addEventListener('click', () => {
                    // 移除所有active类
                    document.querySelectorAll('.student-item').forEach(item => {
                        item.classList.remove('active');
                    });
                    
                    // 添加active类到当前项
                    studentItem.classList.add('active');
                    
                    // 更新当前学生
                    currentStudent = student;
                    
                    // 更新仪表盘
                    updateDashboard();
                });
                
                studentList.appendChild(studentItem);
            });
        }

        // 初始化活动列表
        function initActivityList() {
            const activityList = document.getElementById('activityList');
            activityList.innerHTML = '';
            
            currentStudent.activities.forEach(activity => {
                const activityItem = document.createElement('div');
                activityItem.className = 'activity-item';
                
                // 根据活动类型设置图标和颜色
                let icon = '📊';
                let color = '#5b8fb9';
                
                if (activity.type === 'game') {
                    icon = '🎮';
                    color = '#6bbf8a';
                } else if (activity.type === 'test') {
                    icon = '📝';
                    color = '#ff9e4a';
                } else if (activity.type === 'progress') {
                    icon = '📈';
                    color = '#d45069';
                }
                
                activityItem.innerHTML = `
                    <div class="activity-icon" style="background-color: ${color};">${icon}</div>
                    <div class="activity-content">
                        <div class="activity-title">${activity.title}</div>
                        <div class="activity-time">${activity.time} ${activity.score ? `| 得分: ${activity.score}%` : `| 提升: +${activity.score}%`}</div>
                    </div>
                `;
                
                activityList.appendChild(activityItem);
            });
        }

        // 更新仪表盘数据
        function updateDashboard() {
            // 更新统计卡片
            document.getElementById('recognitionScore').textContent = `${currentStudent.recognition}%`;
            document.getElementById('understandingScore').textContent = `${currentStudent.understanding}%`;
            document.getElementById('regulationScore').textContent = `${currentStudent.regulation}%`;
            document.getElementById('expressionScore').textContent = `${currentStudent.expression}%`;
            
            // 更新图表
            updateCharts();
            
            // 更新活动列表
            initActivityList();
        }

        // 更新图表
        function updateCharts() {
            // 情绪成长曲线
            const growthCtx = document.getElementById('growthChart').getContext('2d');
            
            // 如果已存在图表实例，则销毁它
            if (window.growthChart) {
                window.growthChart.destroy();
            }
            
            window.growthChart = new Chart(growthCtx, {
                type: 'line',
                data: {
                    labels: ['1月', '2月', '3月', '4月', '5月', '6月', '7月', '8月'],
                    datasets: [
                        {
                            label: '情绪识别',
                            data: currentStudent.progress,
                            borderColor: '#ff9e4a',
                            backgroundColor: 'rgba(255, 158, 74, 0.1)',
                            tension: 0.3,
                            fill: true
                        },
                        {
                            label: '班级平均',
                            data: [45, 50, 55, 60, 65, 68, 72, 75],
                            borderColor: '#5b8fb9',
                            borderDash: [5, 5],
                            backgroundColor: 'transparent',
                            tension: 0.3
                        }
                    ]
                },
                options: {
                    responsive: true,
                    plugins: {
                        title: {
                            display: false
                        },
                        legend: {
                            position: 'top',
                        }
                    },
                    scales: {
                        y: {
                            min: 0,
                            max: 100,
                            ticks: {
                                callback: function(value) {
                                    return value + '%';
                                }
                            }
                        }
                    }
                }
            });
            
            // 阶段完成度统计
            const completionCtx = document.getElementById('completionChart').getContext('2d');
            
            // 如果已存在图表实例，则销毁它
            if (window.completionChart) {
                window.completionChart.destroy();
            }
            
            window.completionChart = new Chart(completionCtx, {
                type: 'bar',
                data: {
                    labels: ['基础感知', '情境理解', '社会认知', '综合应用'],
                    datasets: [
                        {
                            label: '完成度',
                            data: currentStudent.stages,
                            backgroundColor: [
                                'rgba(255, 158, 74, 0.7)',
                                'rgba(107, 191, 138, 0.7)',
                                'rgba(212, 80, 105, 0.7)',
                                'rgba(157, 91, 161, 0.7)'
                            ],
                            borderColor: [
                                'rgb(255, 158, 74)',
                                'rgb(107, 191, 138)',
                                'rgb(212, 80, 105)',
                                'rgb(157, 91, 161)'
                            ],
                            borderWidth: 1
                        }
                    ]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: {
                            display: false
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            max: 100,
                            ticks: {
                                callback: function(value) {
                                    return value + '%';
                                }
                            }
                        }
                    }
                }
            });
        }

        // 初始化
        function init() {
            initStudentList();
            updateDashboard();
            
            // 添加按钮事件
            document.getElementById('generateReport').addEventListener('click', function() {
                alert(`正在为 ${currentStudent.name} 生成详细报告...\n报告包含四个维度的详细分析和建议。`);
            });
            
            document.getElementById('exportData').addEventListener('click', function() {
                alert(`正在导出 ${currentStudent.name} 的学习数据...\n数据将保存为CSV格式。`);
            });
        }

        // 页面加载完成后初始化
        window.addEventListener('DOMContentLoaded', init);
    </script>
</body>
</html>
